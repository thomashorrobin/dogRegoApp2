<p id="notice"><%= notice %></p>

<h1>Listing Breeds</h1>

<table class="table">
  <thead>
    <tr>
      <th>Breedname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breeds.each do |breed| %>
      <tr>
        <td><%= breed.BreedName %></td>
        <td><%= link_to 'Show', breed, class: 'btn btn-info active' %></td>
        <td><%= link_to 'Edit', edit_breed_path(breed), class: 'btn btn-default active' %></td>
        <td><%= link_to 'Destroy', breed, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger active' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

